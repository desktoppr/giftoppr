source 'https://rubygems.org'

ruby '2.0.0'

gem 'rails'
gem 'pg'

# Better .env management
gem 'dotenv'

# Dropbox
gem 'omniauth-dropbox'
gem 'dropbox-sdk', :require => 'dropbox_sdk'

# Uploading assets to S3
gem 'fog', '~> 1.12'
gem 'asset_sync'

# Image processing
gem 'fastimage'
gem 'carrierwave'
gem 'mini_magick'

# Front end stuff
gem 'kaminari'

# Production
gem 'unicorn'
gem 'foreman'

# Asset stuff
gem 'sass-rails'
gem 'coffee-rails'
gem 'bourbon'
gem 'jquery-rails'
gem 'font-awesome-rails'
gem 'uglifier'

group :development, :test do
  gem 'rspec-rails'
  gem 'capybara'
  gem 'colorize'
end

group :test do
  gem 'shoulda-matchers'
  gem 'factory_girl_rails'
  gem "pry-debugger"
  gem "pry-rails"
  gem "awesome_print"
end
